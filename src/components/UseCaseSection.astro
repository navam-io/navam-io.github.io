---
export interface UseCase {
  image: {
    url: string;
    alt: string;
  };
  title: string;
  description: string;
  reverse?: boolean;
}

export interface Props {
  title: string;
  useCases: UseCase[];
}

const { title, useCases } = Astro.props;
---

<section class="space-section">
  <div class="container-custom">
    <h2 class="text-section-title font-display text-center mb-lg">{title}</h2>
    <div class="flex flex-col gap-xl">
      {useCases.map((useCase, index) => (
        <div class={`grid grid-cols-1 md:grid-cols-2 gap-lg items-center ${useCase.reverse ? 'md:flex-row-reverse' : ''}`}>
          {useCase.reverse ? (
            <>
              <div class="md:order-2">
                <img
                  src={useCase.image.url}
                  alt={useCase.image.alt}
                  class="w-full rounded-lg shadow-lg"
                />
              </div>
              <div class="md:order-1">
                <h3 class="font-display text-3xl mb-sm">{useCase.title}</h3>
                <p class="text-text-secondary text-lg leading-relaxed">{useCase.description}</p>
              </div>
            </>
          ) : (
            <>
              <img
                src={useCase.image.url}
                alt={useCase.image.alt}
                class="w-full rounded-lg shadow-lg"
              />
              <div>
                <h3 class="font-display text-3xl mb-sm">{useCase.title}</h3>
                <p class="text-text-secondary text-lg leading-relaxed">{useCase.description}</p>
              </div>
            </>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
