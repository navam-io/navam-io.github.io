---
import MainLayout from './MainLayout.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags, image, readingTime } = post.data;

const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(pubDate);
---

<MainLayout
  title={`${title} - Navam Blog`}
  description={description}
  image={image?.url}
  type="article"
  pubDate={pubDate}
  tags={tags}
>
  <header class="post-header">
    <div class="container-custom">
      {tags.length > 0 && (
        <span class="blog-tag">
          {tags[0]}
        </span>
      )}
      <h1>{title}</h1>
      <div class="post-meta">
        <span class="blog-date">{formattedDate}</span>
        {readingTime && (
          <span class="blog-reading-time">{readingTime}</span>
        )}
      </div>
    </div>
  </header>

  <article class="post-content">
    <slot />
  </article>
</MainLayout>

<style>
  /* Post header styling */
  .post-header {
    background: var(--gradient-hero);
    padding: var(--space-xl) 0;
    text-align: center;
  }

  .post-header h1 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    color: var(--color-text-primary);
  }

  .post-meta {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    align-items: center;
    margin-top: var(--space-md);
    font-size: 1rem;
    color: var(--color-text-secondary);
  }

  /* Post content styling - matches legacy blog.css exactly */
  .post-content {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-xl) var(--space-md);
  }

  :global(.post-content h2) {
    font-family: var(--font-display);
    font-size: 2rem;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    color: var(--color-text-primary);
    font-weight: 700;
  }

  :global(.post-content h2:first-of-type) {
    margin-top: 0;
  }

  :global(.post-content h3) {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin-top: var(--space-md);
    margin-bottom: var(--space-sm);
    color: var(--color-text-primary);
    font-weight: 600;
  }

  :global(.post-content p) {
    margin-bottom: var(--space-sm);
    line-height: 1.7;
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  :global(.post-content p strong) {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  :global(.post-content a) {
    color: #8B5CF6;
    text-decoration: none;
    border-bottom: 1px solid rgba(139, 92, 246, 0.3);
    transition: all 0.3s ease;
  }

  :global(.post-content a:hover) {
    color: #6D28D9;
    border-bottom-color: #6D28D9;
  }

  :global(.post-content img) {
    width: 100%;
    border-radius: 16px;
    margin: var(--space-md) 0;
    box-shadow: var(--shadow-lg);
    transition: transform 0.3s ease;
  }

  :global(.post-content img:hover) {
    transform: scale(1.01);
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
    color: var(--color-text-secondary);
  }

  :global(.post-content li) {
    margin-bottom: var(--space-xs);
    line-height: 1.7;
    font-size: 1.125rem;
  }

  :global(.post-content ul li::marker) {
    color: #8B5CF6;
  }

  :global(.post-content ol li::marker) {
    color: #8B5CF6;
    font-weight: 600;
  }

  :global(.post-content code) {
    background: #F5F7FA;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.9em;
    color: #8B5CF6;
    border: 1px solid #E8D5F2;
  }

  :global(.post-content pre) {
    background: #2D2D2D;
    color: #E8D5F2;
    padding: var(--space-md);
    border-radius: 12px;
    overflow-x: auto;
    margin: var(--space-md) 0;
    box-shadow: var(--shadow-md);
  }

  :global(.post-content pre code) {
    background: none;
    padding: 0;
    color: inherit;
    border: none;
    font-size: 0.95em;
    line-height: 1.6;
  }

  :global(.post-content blockquote) {
    border-left: 4px solid var(--pastel-purple);
    padding-left: var(--space-md);
    margin: var(--space-md) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-header {
      padding: var(--space-lg) 0;
    }

    .post-content {
      padding: var(--space-lg) var(--space-sm);
    }

    :global(.post-content h2) {
      font-size: 1.75rem;
    }

    :global(.post-content h3) {
      font-size: 1.25rem;
    }

    :global(.post-content p),
    :global(.post-content li) {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .post-header h1 {
      font-size: 1.75rem;
    }

    :global(.post-content h2) {
      font-size: 1.5rem;
      margin-top: var(--space-md);
    }

    :global(.post-content h3) {
      font-size: 1.125rem;
    }

    .post-meta {
      flex-direction: column;
      gap: var(--space-xs);
      font-size: 0.875rem;
    }
  }
</style>
