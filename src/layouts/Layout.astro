---
import '@styles/global.css';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  twitterCard?: string;
  canonicalURL?: string;
  author?: string;
}

const {
  title,
  description = 'AI-powered business intelligence platform featuring Moments for enterprise intelligence. Transform information overload into strategic insights with multi-agent systems, smart correlation discovery, and competitive analysis capabilities.',
  keywords = 'Moments, AI business intelligence, multi-agent systems, business intelligence platform, competitive analysis, AI-powered insights, Navam Client, Navam Memo, enterprise intelligence, strategic decision-making, lean AI automation, AI advisory',
  ogImage = '/android-chrome-512x512.png',
  ogType = 'website',
  twitterCard = 'summary_large_image',
  canonicalURL = new URL(Astro.url.pathname, Astro.site).toString(),
  author = 'Navam Team'
} = Astro.props;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Navam",
  "description": "AI product studio building reference implementations that explore frontier interfaces for AI↔AI, AI↔Human, and AI↔World interactions",
  "url": "https://www.navam.io",
  "logo": "https://www.navam.io/images/logo.png",
  "foundingDate": "2025",
  "sameAs": [
    "https://github.com/navam-io"
  ],
  "keywords": "AI product studio, frontier AI interfaces, multi-agent systems, investment intelligence, business intelligence, TUI applications, knowledge graphs, reference implementations",
  "slogan": "Exploring Frontier AI-Human Interfaces",
  "products": [
    {
      "@type": "SoftwareApplication",
      "name": "Navam Invest",
      "applicationCategory": "FinanceApplication",
      "description": "AI-powered investment intelligence tool with 10 specialized agents for retail investors. Professional-grade analysis on your laptop.",
      "operatingSystem": "Windows, macOS, Linux",
      "softwareVersion": "Latest",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "url": "https://github.com/navam-io/navam-invest",
      "installUrl": "https://pypi.org/project/navam-invest/",
      "screenshot": "https://www.navam.io/images/navam-invest-screenshot.png",
      "featureList": [
        "10 specialized AI agents",
        "Real-time market analysis",
        "Portfolio management",
        "Risk assessment",
        "Text User Interface (TUI)"
      ]
    },
    {
      "@type": "SoftwareApplication",
      "name": "Moments",
      "applicationCategory": "BusinessApplication",
      "description": "AI business intelligence dashboard with knowledge graphs, three-tier analytics, and correlation matrix. 237+ entities, 1,814 relationships.",
      "operatingSystem": "Web Browser",
      "softwareVersion": "Latest",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "url": "https://github.com/navam-io/moments",
      "featureList": [
        "Interactive knowledge graphs",
        "Three-tier analytics dashboards",
        "Force-directed network visualization",
        "Correlation matrix analysis",
        "Strategic insights"
      ]
    }
  ],
  "knowsAbout": [
    "Artificial Intelligence",
    "Multi-Agent Systems",
    "Investment Intelligence",
    "Business Intelligence",
    "Knowledge Graphs",
    "Text User Interfaces",
    "Financial Technology",
    "AI-Human Interaction"
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="English" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site).toString()} />
    <meta property="og:site_name" content="Navam" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content={twitterCard} />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site).toString()} />
    
    <!-- Performance Optimization -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Additional Meta Tags -->
    <meta name="theme-color" content="#8B5CF6" />
    <meta name="msapplication-TileColor" content="#8B5CF6" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-LL8G4S4MLR"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-LL8G4S4MLR');
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>