---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import BlogCard from '../../components/BlogCard.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<MainLayout
  title="Blog - Navam | AI Investment Intelligence Insights"
  description="Insights on AI-powered investment intelligence, multi-agent systems, LangGraph architecture, and frontier interfaces."
>
  <header class="blog-hero">
    <div class="container-custom">
      <h1>Navam Blog</h1>
      <p>Insights on AI-powered investment intelligence and frontier interfaces</p>
    </div>
  </header>

  <main class="blog-main">
    <div class="container-custom">
      <div class="blog-grid">
        {sortedPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            tags={post.data.tags}
            image={post.data.image}
            readingTime={post.data.readingTime}
            slug={post.slug}
            featured={post.data.featured}
          />
        ))}
      </div>
    </div>
  </main>
</MainLayout>

<style>
  .blog-hero {
    background: var(--gradient-secondary);
    padding: var(--space-xl) 0 var(--space-lg);
    text-align: center;
  }

  .blog-hero h1 {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    margin-bottom: var(--space-sm);
    background: linear-gradient(135deg, #8B5CF6 0%, #EC4899 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-hero p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
  }

  .blog-main {
    padding: var(--space-xl) 0;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-lg);
  }

  @media (max-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .blog-hero {
      padding: var(--space-lg) 0;
    }
  }

  @media (max-width: 480px) {
    .blog-hero h1 {
      font-size: 2rem;
    }

    .blog-hero p {
      font-size: 1rem;
    }
  }
</style>
