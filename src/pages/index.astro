];

const requirements = [
  "<strong>Requirements:</strong> Python 3.9+ and Anthropic API key",
  "<strong>Perfect for:</strong> Retail investors managing $50K-$1M portfolios"
];
---

<MainLayout
  title="Navam - AI-Powered Investment Intelligence for Retail Investors"
  description="Professional-grade investment research powered by 10 specialized AI agents. Local-first privacy, natural language queries, and comprehensive analysis for $3-15/month. No subscriptions."
  image="/refer/images/navam-invest/natural-prompt.png"
>
  <Hero
    title="Frontier Interfaces for AI, Humans, and the World"
    subtitle="Building reference products that explore AI↔AI, AI↔Human, and AI↔World interactions"
    primaryCTA={{ text: "Start with Navam Invest", href: "#get-started" }}
    secondaryCTA={{ text: "View on GitHub", href: "https://github.com/navam-io/navam-invest" }}
  />

  <ProductGrid
    title="Introducing Navam Invest"
    subtitle="AI-Powered Investment Intelligence for Retail Investors"
    features={features}
    showcaseImage={{
      url: "/refer/images/navam-invest/natural-prompt.png",
      alt: "Navam Invest Natural Language Interface"
    }}
  />

  <AgentsSection
    title="Specialized Investment Agents"
    agents={agents}
  />

  <UseCaseSection
    title="Built for Retail Investors"
    useCases={useCases}
  />

  <GetStarted
    title="Start Investing Smarter Today"
    subtitle="Get up and running in under 2 minutes"
    steps={installationSteps}
    requirements={requirements}
  />

  <section class="space-section text-center">
    <div class="container-custom">
      <h2 class="text-section-title font-display mb-sm">Fully Open Source & Documented</h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto mb-md">
        All Navam products are AI-generated, fully documented, and ready for evaluation. We share the prompts, the code, and the learnings.
      </p>
      <a href="https://github.com/navam-io/navam-invest" class="btn-primary" target="_blank" rel="noopener">
        Explore on GitHub
      </a>
    </div>
  </section>
</MainLayout>
