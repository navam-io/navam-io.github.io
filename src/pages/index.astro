  { name: "Tax Scout", description: "Tax optimization strategies" },
  { name: "Hedge Smith", description: "Options hedging strategies" }
];

const useCases = [
  {
    image: {
      url: "/refer/images/navam-invest/response.png",
      alt: "AI Response Example"
    },
    title: "Expert-Level Analysis",
    description: "Get comprehensive investment research that traditionally costs thousands per year. Navam Invest delivers professional-grade analysis for ~$3-15/month.",
    reverse: false
  },
  {
    image: {
      url: "/refer/images/navam-invest/api.png",
      alt: "API Configuration"
    },
    title: "Local & Private",
    description: "Runs entirely on your laptop using your API keys. Your financial data never leaves your device.",
    reverse: true
  },
  {
    image: {
      url: "/refer/images/navam-invest/report.png",
