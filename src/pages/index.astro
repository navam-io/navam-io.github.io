];

const installationSteps = [
  {
    title: "Install via pip",
    code: "pip install navam-invest"
  },
  {
    title: "Add your API key",
    description: "Create a <code>.env</code> file with your Anthropic API key"
  },
  {
    title: "Launch the app",
    code: "navam invest"
