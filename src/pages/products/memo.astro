---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';
import Button from '@components/ui/Button.vue';

const productSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Memo",
  "applicationCategory": "ProductivityApplication",
  "description": "AI-powered browsing companion with multi-provider support, YouTube integration, and privacy-first design. Local-first AI assistance for web research.",
  "operatingSystem": "Web Browser",
  "softwareVersion": "1.0.0",
  "datePublished": "2025-07-06",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Open source (MIT License). Pay only for AI API costs (or use free local Ollama)."
  },
  "url": "https://www.navam.io/products/memo",
  "codeRepository": "https://github.com/navam-io/memo",
  "featureList": [
    "Multi-AI provider support (OpenAI, Anthropic, Ollama)",
    "YouTube transcript integration and analysis",
    "Privacy-first local execution option",
    "Browser extension for seamless capture",
    "Auto-summarization and smart tagging",
    "Conversational AI chat with saved content",
    "Local Ollama support (zero external calls)",
    "Rich context preservation",
    "Structured data extraction",
    "Cross-platform sync (optional)"
  ],
  "softwareRequirements": "Chrome, Edge, or Brave browser",
  "license": "https://opensource.org/licenses/MIT",
  "author": {"@type": "Organization", "name": "Navam", "url": "https://www.navam.io"}
};

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Install Memo",
  "totalTime": "PT2M",
  "step": [
    {"@type": "HowToStep", "position": 1, "name": "Install Extension", "text": "Add Memo to Chrome from the Chrome Web Store"},
    {"@type": "HowToStep", "position": 2, "name": "Configure AI Provider", "text": "Choose OpenAI, Anthropic, or local Ollama"},
    {"@type": "HowToStep", "position": 3, "name": "Add API Keys", "text": "Enter your API keys (or skip for Ollama)"},
    {"@type": "HowToStep", "position": 4, "name": "Start Capturing", "text": "Click the Memo icon on any webpage to capture content"}
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is Memo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Memo is a Chrome extension that transforms your browsing into AI conversations. Capture content from any website, YouTube video, or article, and chat with it using AI. It's like having an intelligent research assistant built into your browser."
      }
    },
    {
      "@type": "Question",
      "name": "Which AI providers does Memo support?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Memo supports OpenAI (GPT-4o), Anthropic (Claude), and local Ollama models. You can switch between providers or use fully local execution for complete privacy."
      }
    },
    {
      "@type": "Question",
      "name": "Is my data private?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Memo offers privacy-first design. Use local Ollama for zero external API calls‚Äîeverything stays on your device. Or choose trusted cloud providers (OpenAI, Anthropic) based on your preferences."
      }
    },
    {
      "@type": "Question",
      "name": "Does Memo work with YouTube?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Memo automatically captures YouTube transcripts, video metadata, and lets you chat with video content. Ask questions like 'What were the main points?' or 'Summarize this in 3 bullets.'"
      }
    }
  ]
};
---

<Layout
  title="Memo - AI-Powered Browsing Companion for Chrome"
  description="Transform your browsing into AI conversations. Capture content from any website, chat with YouTube videos, and organize research with AI. Privacy-first with local Ollama support. Open source, MIT licensed."
  keywords="AI browser extension, Chrome AI assistant, YouTube AI, web research tool, Ollama browser extension, privacy-first AI, knowledge management"
  ogImage="/images/blog/select-content-to-capture.png"
  ogType="product"
>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(howToSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <Header client:load />

  <main class="min-h-screen">
    <section class="relative py-20 bg-gradient-to-br from-orange-900 via-red-900 to-pink-900 overflow-hidden">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight">
            Transform Browsing
            <span class="block mt-2 bg-gradient-to-r from-orange-200 to-pink-200 bg-clip-text text-transparent">
              Into AI Conversations
            </span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-white/90">
            Capture content from any website and <strong>actually talk to it</strong> using AI.
            YouTube, articles, docs‚Äîchat with everything you save.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button client:load variant="primary" size="lg" href="https://github.com/navam-io/memo">
              View on GitHub
            </Button>
            <Button client:load variant="secondary" size="lg" href="#features">
              See How It Works
            </Button>
          </div>
        </div>
      </div>
    </section>

    <section id="features" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl font-black text-center mb-16">What Makes Memo Different</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üß† Capture & Chat</h3>
            <p>Save content from any website and have real conversations with it using AI. Not just bookmarks‚Äîintelligent research.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üè∑Ô∏è Auto-Organize</h3>
            <p>AI suggests tags and categories automatically. No more "where did I save that?" moments.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üí¨ Ask Real Questions</h3>
            <p>"What did I save about React performance?" or "Compare the pricing I found"‚Äîget actual answers.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üé• YouTube Integration</h3>
            <p>Automatically captures transcripts and metadata. Chat with video content as easily as articles.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üîí Privacy-First</h3>
            <p>Use local Ollama for zero external API calls. Your data stays on your device, completely private.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <h3 class="text-2xl font-bold mb-3">üåê Multi-Provider</h3>
            <p>Choose OpenAI, Anthropic Claude, or local Ollama. Switch anytime based on your needs.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-black text-center mb-12">How It Works</h2>
          <div class="space-y-16">
            <div class="grid md:grid-cols-2 gap-12 items-center">
              <div>
                <h3 class="text-3xl font-bold mb-4">1. Capture with One Click</h3>
                <p class="text-xl text-gray-700 mb-4">
                  Point and click on any content you want to save. Our extension makes everything selectable.
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li>‚úì Any website (articles, products, docs)</li>
                  <li>‚úì YouTube videos (with transcripts)</li>
                  <li>‚úì Smart extraction of titles and summaries</li>
                  <li>‚úì Rich context preservation</li>
                </ul>
              </div>
              <div class="bg-gray-200 rounded-lg aspect-video flex items-center justify-center">
                <p class="text-gray-500 text-center">Content Capture Demo<br/>(Screenshot)</p>
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-12 items-center">
              <div class="order-2 md:order-1 bg-gray-200 rounded-lg aspect-video flex items-center justify-center">
                <p class="text-gray-500 text-center">AI Analysis Demo<br/>(Screenshot)</p>
              </div>
              <div class="order-1 md:order-2">
                <h3 class="text-3xl font-bold mb-4">2. AI Does the Heavy Lifting</h3>
                <p class="text-xl text-gray-700 mb-4">
                  Once captured, AI immediately processes your content automatically.
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li>‚úì Auto-summarization of key points</li>
                  <li>‚úì Smart tagging and categorization</li>
                  <li>‚úì Structured data extraction (prices, dates)</li>
                  <li>‚úì Context preservation with source links</li>
                </ul>
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-12 items-center">
              <div>
                <h3 class="text-3xl font-bold mb-4">3. Chat with Everything</h3>
                <p class="text-xl text-gray-700 mb-4">
                  Have real conversations with your saved content using natural language.
                </p>
                <ul class="space-y-2 text-gray-600">
                  <li>‚úì "Compare the features I saved"</li>
                  <li>‚úì "What was the pricing from that article?"</li>
                  <li>‚úì "Summarize my research on React hooks"</li>
                  <li>‚úì Cross-reference multiple saved items</li>
                </ul>
              </div>
              <div class="bg-gray-200 rounded-lg aspect-video flex items-center justify-center">
                <p class="text-gray-500 text-center">Chat Interface Demo<br/>(Screenshot)</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-black text-center mb-12">Installation</h2>
          <div class="bg-gray-50 rounded-2xl p-8">
            <div class="space-y-6">
              <div>
                <h4 class="font-bold text-lg mb-2">1. Install Extension</h4>
                <p class="text-gray-600 mb-3">Add Memo to Chrome from the Chrome Web Store (or install from GitHub for development)</p>
              </div>

              <div>
                <h4 class="font-bold text-lg mb-2">2. Configure AI Provider</h4>
                <p class="text-gray-600 mb-3">Choose your preferred AI provider:</p>
                <ul class="list-disc list-inside text-gray-600 space-y-1">
                  <li>OpenAI (GPT-4o, GPT-4o Mini)</li>
                  <li>Anthropic (Claude Sonnet, Haiku)</li>
                  <li>Ollama (Local - Llama 3.1, Mistral, Gemma 2)</li>
                </ul>
              </div>

              <div>
                <h4 class="font-bold text-lg mb-2">3. Add API Keys</h4>
                <p class="text-gray-600">Enter your API keys in the extension settings (skip this step if using Ollama locally)</p>
              </div>

              <div>
                <h4 class="font-bold text-lg mb-2">4. Start Capturing</h4>
                <p class="text-gray-600">Click the Memo icon on any webpage to start saving and chatting with content!</p>
              </div>
            </div>

            <div class="mt-8 p-6 bg-green-50 rounded-lg">
              <h4 class="font-bold text-lg mb-2">üíö Privacy Tip</h4>
              <p class="text-gray-700">For maximum privacy, use Ollama. All processing happens locally on your device with zero external API calls.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-4xl md:text-5xl font-black text-center mb-12">FAQ</h2>
          <div class="space-y-6">
            <div class="bg-white p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-3">What is Memo?</h3>
              <p class="text-gray-700">Memo is a Chrome extension that transforms your browsing into AI conversations. Capture content from any website or YouTube video and chat with it using AI.</p>
            </div>
            <div class="bg-white p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-3">Which AI providers are supported?</h3>
              <p class="text-gray-700">Memo supports OpenAI (GPT-4o), Anthropic (Claude), and local Ollama models. Switch between providers or use fully local execution for complete privacy.</p>
            </div>
            <div class="bg-white p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-3">Is my data private?</h3>
              <p class="text-gray-700">Yes! Use local Ollama for zero external API calls‚Äîeverything stays on your device. Or choose trusted cloud providers based on your preferences.</p>
            </div>
            <div class="bg-white p-6 rounded-lg">
              <h3 class="text-xl font-bold mb-3">Does Memo work with YouTube?</h3>
              <p class="text-gray-700">Yes! Memo automatically captures YouTube transcripts, video metadata, and lets you chat with video content.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-20 bg-gradient-to-br from-red-900 to-pink-900">
      <div class="container mx-auto px-4 text-center text-white">
        <h2 class="text-4xl md:text-5xl font-black mb-6">Never Lose Track Again</h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          Transform your bookmarks into intelligent conversations. Research smarter with AI-powered browsing.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button client:load variant="primary" size="lg" href="https://github.com/navam-io/memo">
            View on GitHub
          </Button>
          <Button client:load variant="secondary" size="lg" href="/blog/introducing-trenddit-memo-ai-browsing">
            Read the Blog Post
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</Layout>
