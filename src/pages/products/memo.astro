---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.vue';
import StripeButton from '@components/ui/StripeButton.vue';

const productSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Memo",
  "applicationCategory": "ProductivityApplication",
  "description": "AI-powered browsing companion with multi-provider support, YouTube integration, and privacy-first design. Local-first AI assistance for web research.",
  "operatingSystem": "Web Browser",
  "softwareVersion": "1.0.0",
  "datePublished": "2025-07-06",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Open source (MIT License). Pay only for AI API costs (or use free local Ollama)."
  },
  "url": "https://www.navam.io/products/memo",
  "codeRepository": "https://github.com/navam-io/memo",
  "featureList": [
    "Multi-AI provider support (OpenAI, Anthropic, Ollama)",
    "YouTube transcript integration and analysis",
    "Privacy-first local execution option",
    "Browser extension for seamless capture",
    "Auto-summarization and smart tagging",
    "Conversational AI chat with saved content",
    "Local Ollama support (zero external calls)",
    "Rich context preservation",
    "Structured data extraction",
    "Cross-platform sync (optional)"
  ],
  "softwareRequirements": "Chrome, Edge, or Brave browser",
  "license": "https://opensource.org/licenses/MIT",
  "author": {"@type": "Organization", "name": "Navam", "url": "https://www.navam.io"}
};

const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Install Memo",
  "totalTime": "PT2M",
  "step": [
    {"@type": "HowToStep", "position": 1, "name": "Install Extension", "text": "Add Memo to Chrome from the Chrome Web Store"},
    {"@type": "HowToStep", "position": 2, "name": "Configure AI Provider", "text": "Choose OpenAI, Anthropic, or local Ollama"},
    {"@type": "HowToStep", "position": 3, "name": "Add API Keys", "text": "Enter your API keys (or skip for Ollama)"},
    {"@type": "HowToStep", "position": 4, "name": "Start Capturing", "text": "Click the Memo icon on any webpage to capture content"}
  ]
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What is Memo?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Memo is a Chrome extension that transforms your browsing into AI conversations. Capture content from any website, YouTube video, or article, and chat with it using AI. It's like having an intelligent research assistant built into your browser."
      }
    },
    {
      "@type": "Question",
      "name": "Which AI providers does Memo support?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Memo supports OpenAI (GPT-4o), Anthropic (Claude), and local Ollama models. You can switch between providers or use fully local execution for complete privacy."
      }
    },
    {
      "@type": "Question",
      "name": "Is my data private?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Memo offers privacy-first design. Use local Ollama for zero external API calls—everything stays on your device. Or choose trusted cloud providers (OpenAI, Anthropic) based on your preferences."
      }
    },
    {
      "@type": "Question",
      "name": "Does Memo work with YouTube?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! Memo automatically captures YouTube transcripts, video metadata, and lets you chat with video content. Ask questions like 'What were the main points?' or 'Summarize this in 3 bullets.'"
      }
    }
  ]
};
---

<Layout
  title="Memo - AI-Powered Browsing Companion for Chrome"
  description="Transform your browsing into AI conversations. Capture content from any website, chat with YouTube videos, and organize research with AI. Privacy-first with local Ollama support. Open source, BSL-1.1 licensed."
  keywords="AI browser extension, Chrome AI assistant, YouTube AI, web research tool, Ollama browser extension, privacy-first AI, knowledge management"
  ogImage="/images/blog/select-content-to-capture.png"
  ogType="product"
>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(howToSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <Header client:load />

  <main class="min-h-screen">
    <section class="relative py-20 bg-gradient-to-br from-orange-900 via-red-900 to-pink-900 overflow-hidden">
      <div class="absolute inset-0 bg-black/20"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center text-white">
          <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight">
            Browser AI Companion
            <span class="block mt-2 bg-gradient-to-r from-orange-200 to-pink-200 bg-clip-text text-transparent">
              With Multi-Provider Support
            </span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-white/90">
            Chrome extension with YouTube integration, local Ollama support, and privacy-first design.
            <strong>Fork this to build browser extensions, research tools, and content aggregators.</strong>
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a href="https://github.com/navam-io/memo" target="_blank"
               class="inline-flex items-center justify-center gap-2 h-12 px-6 bg-white border-2 border-gray-300 text-gray-900 rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all font-semibold">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>View Code</span>
            </a>
            <StripeButton client:load buyButtonId="buy_btn_1SJ5kFRCxnzBPkIXLnQOqiLe" />
          </div>
        </div>
      </div>
    </section>

    <!-- Value Proposition -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-6">
            You're Building Browser Extensions, But...
          </h2>
          <p class="text-2xl text-gray-900 leading-relaxed mb-8 font-semibold">
            Chrome extension architecture is complex. Multi-provider AI integration takes months. Privacy-first design requires expertise.
          </p>
        </div>

        <!-- Comparison Grid -->
        <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-6 mb-16">
          <!-- Building from Scratch -->
          <div class="bg-gradient-to-br from-red-50 to-orange-50 rounded-2xl p-8 border-2 border-red-200">
            <div class="text-center mb-4">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-red-100 mb-4">
                <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">Building from Scratch</h3>
              <div class="text-3xl font-black text-red-600 mb-4">4-8 months</div>
            </div>
            <ul class="space-y-3 text-sm text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-red-500 font-bold">✗</span>
                <span>Learn Chrome extension APIs</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-500 font-bold">✗</span>
                <span>Build content capture system</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-500 font-bold">✗</span>
                <span>Integrate multiple AI providers</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-red-500 font-bold">✗</span>
                <span>Debug browser permissions</span>
              </li>
            </ul>
          </div>

          <!-- Generic Extensions -->
          <div class="bg-gradient-to-br from-yellow-50 to-amber-50 rounded-2xl p-8 border-2 border-yellow-200">
            <div class="text-center mb-4">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-yellow-100 mb-4">
                <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">Extension Boilerplates</h3>
              <div class="text-3xl font-black text-yellow-600 mb-4">Limited</div>
            </div>
            <ul class="space-y-3 text-sm text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-yellow-500 font-bold">✗</span>
                <span>No AI integration included</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-yellow-500 font-bold">✗</span>
                <span>Basic structure only</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-yellow-500 font-bold">✗</span>
                <span>Still need domain logic</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-yellow-500 font-bold">✗</span>
                <span>No privacy features</span>
              </li>
            </ul>
          </div>

          <!-- Fork Memo -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8 border-4 border-green-500 shadow-xl relative">
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <div class="inline-flex items-center px-4 py-1 rounded-full bg-green-600 text-white text-sm font-bold whitespace-nowrap">
                REFERENCE READY
              </div>
            </div>
            <div class="text-center mb-4 mt-2">
              <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-green-100 mb-4">
                <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gray-900 mb-2">Fork Memo</h3>
              <div class="text-3xl font-black text-green-600 mb-4">Ship in 2-7 Days</div>
            </div>
            <ul class="space-y-3 text-sm text-gray-700">
              <li class="flex items-start gap-2">
                <span class="text-green-500 font-bold text-lg">✓</span>
                <span class="font-medium">Multi-provider AI ready</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 font-bold text-lg">✓</span>
                <span class="font-medium">Content capture built-in</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 font-bold text-lg">✓</span>
                <span class="font-medium">Privacy-first with Ollama</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500 font-bold text-lg">✓</span>
                <span class="font-medium">Fork, customize, ship</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Fork This To Build -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl font-black text-center mb-16">Fork This To Build</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Research Tools</h3>
            <p class="text-gray-600">Academic research, web scraping, data collection platforms</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Content Aggregators</h3>
            <p class="text-gray-600">News readers, RSS aggregators, content curation systems</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Browser AI Assistants</h3>
            <p class="text-gray-600">Page analysis, smart summaries, contextual AI helpers</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Knowledge Capture Systems</h3>
            <p class="text-gray-600">Personal wikis, second brain apps, knowledge management</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-teal-500 to-teal-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Note-Taking Extensions</h3>
            <p class="text-gray-600">Web clipper, annotation tools, highlight management</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Content Summarizers</h3>
            <p class="text-gray-600">Article summaries, video transcripts, tl;dr generators</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Web Scraping Tools</h3>
            <p class="text-gray-600">Data extraction, price monitoring, competitor tracking</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-pink-600 rounded-xl flex items-center justify-center mb-4 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-3">Reading Comprehension Aids</h3>
            <p class="text-gray-600">Study helpers, vocabulary tools, context analysis</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section id="features" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl md:text-5xl font-black text-center mb-16">Working Features</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-3 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">Capture & Chat</h3>
            <p>Save content from any website and have real conversations with it using AI. Not just bookmarks—intelligent research.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center mb-3 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">Auto-Organize</h3>
            <p>AI suggests tags and categories automatically. No more "where did I save that?" moments.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-600 rounded-xl flex items-center justify-center mb-3 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">Ask Real Questions</h3>
            <p>"What did I save about React performance?" or "Compare the pricing I found"—get actual answers.</p>
          </div>

          <div class="bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center mb-3 shadow-lg">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold mb-3">YouTube Integration</h3>
