    {
      "@type": "HowToStep",
      "position": 4,
      "name": "Start Development Server",
      "text": "Launch the dashboard locally",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "npm run dev"
        }
      ]
    }
  ]
