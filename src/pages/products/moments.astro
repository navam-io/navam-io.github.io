// HowTo Schema for Setup
const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Deploy Moments Dashboard",
  "description": "Deploy your own AI business intelligence dashboard",
  "totalTime": "PT10M",
  "step": [
    {
      "@type": "HowToStep",
      "position": 1,
      "name": "Clone Repository",
      "text": "Clone the Moments repository from GitHub",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "git clone https://github.com/navam-io/moments.git"
        }
      ]
    },
    {
      "@type": "HowToStep",
      "position": 2,
      "name": "Install Dependencies",
      "text": "Install required packages",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "npm install"
        }
      ]
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "name": "Configure Data Sources",
      "text": "Set up your data connections and API keys"
