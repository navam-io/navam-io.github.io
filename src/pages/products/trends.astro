  "url": "https://www.navam.io/products/trends",
  "codeRepository": "https://github.com/navam-io/trends",
  "screenshot": [
    "https://www.navam.io/images/blog/trends-intelligence-cards.png"
  ],
  "featureList": [
    "Multi-agent reasoning system for technology assessment",
    "Automated market research and competitive intelligence",
    "Strategic planning and decision support",
    "Technology radar with real-time tracking",
    "Vendor evaluation scoring algorithms",
    "Innovation trend detection with ML",
    "Next.js dashboard with modern UI",
    "TypeScript for type safety",
    "Claude AI integration for deep analysis",
    "Battle-tested production patterns"
