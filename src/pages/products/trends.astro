const howToSchema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Deploy Trends Intelligence",
  "description": "Deploy your own AI-powered trend analysis system",
  "totalTime": "PT15M",
  "step": [
    {
      "@type": "HowToStep",
      "position": 1,
      "name": "Clone Repository",
      "text": "Clone the Trends repository from GitHub",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "git clone https://github.com/navam-io/trends.git"
        }
      ]
    },
    {
      "@type": "HowToStep",
      "position": 2,
      "name": "Install Dependencies",
      "text": "Install required packages",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "npm install"
        }
      ]
    },
    {
      "@type": "HowToStep",
      "position": 3,
      "name": "Configure AI Keys",
      "text": "Set up Anthropic API key for AI analysis"
    },
    {
      "@type": "HowToStep",
      "position": 4,
      "name": "Start Dashboard",
      "text": "Launch the intelligence dashboard",
      "itemListElement": [
        {
          "@type": "HowToDirection",
          "text": "npm run dev"
        }
      ]
    }
  ]
